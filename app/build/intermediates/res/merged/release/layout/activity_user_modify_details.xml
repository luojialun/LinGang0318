<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ac_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <com.lingang.view.SettingItem
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:itemText="纠错内容"
            app:itemTextSize="16sp"
            app:itemTextColor="@color/black_70"
            app:leftdrawable="@mipmap/ic_jiucuo"/>
        <com.lingang.view.SettingItem
            android:id="@+id/user_suggest_linkName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:paddingLeft="-10dp"
            app:itemText="关联页面"
            app:itemTextColor="@color/black_40"
            app:itemTextSize="14sp"
            app:rightTextSize="14sp"
            app:rightTextColor="@color/black_80"
            app:rightText="临港装备产业详情页"
            app:showdivider="false" />
        <com.lingang.view.SettingItem
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="-10dp"
            android:background="@color/white"
            app:itemText="纠错内容"
            app:itemTextColor="@color/black_40"
            app:itemTextSize="14sp"
            app:showdivider="false"
            app:showArrow="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="@color/black_80"
            android:paddingLeft="15dp"
            android:paddingRight="24dp"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:text="园区简介字段错误，正确的字段是【洋山保税区】、和对应的【临港奉贤园区】：产业定位中数据不准确  "/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingBottom="20dp"
            android:paddingTop="2dp"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="@color/black_40"
            android:text="2017-03-02  19：34 "/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <com.lingang.view.SettingItem
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            app:itemText="管理员回复"
            app:itemTextSize="16sp"
            app:itemTextColor="@color/black_70"
            app:leftdrawable="@mipmap/ic_glyhf"/>
        <com.lingang.view.SettingItem
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:paddingLeft="-10dp"
            app:itemText="联络人"
            app:itemTextColor="@color/black_40"
            app:itemTextSize="14sp"
            app:rightTextSize="14sp"
            app:rightTextColor="@color/black_80"
            app:rightText="李慕白"
            app:showdivider="false" />
        <com.lingang.view.SettingItem
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="-10dp"
            android:background="@color/white"
            app:itemText="管理员回复"
            app:itemTextColor="@color/black_40"
            app:itemTextSize="14sp"
            app:showdivider="false"
            app:showArrow="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="@color/black_80"
            android:paddingLeft="15dp"
            android:paddingRight="24dp"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
            android:text="谢谢您的反馈，我们在收到反馈的三个工作日内会及时"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingBottom="20dp"
            android:paddingTop="2dp"
            android:background="@color/white"
            android:textSize="14sp"
            android:textColor="@color/black_40"
            android:text="2017-03-11  19：12"/>
    </LinearLayout>
</LinearLayout>