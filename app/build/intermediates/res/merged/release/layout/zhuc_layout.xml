<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@color/ac_bg" />

    <TextView
        android:id="@+id/zhuc_dele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:drawableLeft="@mipmap/ic_zhucexing"
        android:drawablePadding="@dimen/margin_8"
        android:drawableRight="@mipmap/ic_shanchu_b"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:text="注册型企业"
        android:textColor="@color/black"
        android:textSize="@dimen/text_15" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_8"
        android:background="@color/ac_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/zhongdian"
            android:drawablePadding="@dimen/margin_5"
            android:text="企业类型"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/zhuc_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_8"
            android:drawablePadding="@dimen/margin_5"
            android:drawableRight="@mipmap/go"
            android:hint="选择企业类型"
            android:textAlignment="textEnd"
            android:textColorHint="@color/black_40"
            android:textColor="@color/black_80"
            android:textSize="@dimen/text_14" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/margin_8"
        android:background="@color/ac_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/zhongdian"
            android:drawablePadding="@dimen/margin_5"
            android:text="注册资金"
            android:textColor="@color/black"
            android:textSize="@dimen/text_15" />

        <EditText
            android:id="@+id/zhuc_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_5"
            android:textAlignment="textEnd"
            android:background="@null"
            android:inputType="numberDecimal"
            android:hint="填入注册资金数量"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="@color/black_40"
            android:textColor="@color/black_80"
            android:textSize="@dimen/text_14"
            tools:ignore="RtlCompat" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="万元"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin_8"
            android:textSize="@dimen/text_14"
            android:textColor="@color/black"/>
    </LinearLayout>

</LinearLayout>