<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/view_search_toolbar"/>
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/news_search_category_stl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        app:tl_textSelectColor="@color/word_orange_color_F57725"
        app:tl_textUnselectColor="@color/black"
        app:tl_indicator_margin_left="2dp"
        app:tl_indicator_margin_right="2dp"
        app:tl_indicator_style="NORMAL" />
    <!--center-->
    <android.support.v4.view.ViewPager
        android:id="@+id/news_search_category_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
