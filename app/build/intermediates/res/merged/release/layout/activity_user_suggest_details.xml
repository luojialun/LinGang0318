<?xml version="1.0" encoding="utf-8"?>
<com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.lingang.view.SettingItem

                    android:id="@+id/feedback_content_si"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:itemText="意见反馈"
                    app:itemTextColor="@color/black"
                    app:itemTextSize="16sp"
                    app:leftdrawable="@mipmap/ic_yijianfankui"
                    app:showArrow="gone" />

                <TextView
                    android:id="@+id/suggest_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="24dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/black_80"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/suggest_plane_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone">

                <com.lingang.view.SettingItem
                    android:id="@+id/admin_reply_si"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    app:itemText="管理员回复"
                    app:itemTextColor="@color/black"
                    app:itemTextSize="16sp"
                    app:leftdrawable="@mipmap/ic_glyhf"
                    app:showArrow="gone" />

                <TextView
                    android:id="@+id/suggest_reply_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="2dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="24dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/black_80"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>