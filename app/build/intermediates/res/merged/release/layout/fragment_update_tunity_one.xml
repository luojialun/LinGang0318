<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ac_bg"
    android:orientation="vertical">

    <include layout="@layout/title_app" />

    <com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tr_enable_loadmore="false"
        app:tr_enable_refresh="false">

        <ScrollView
            android:id="@+id/sc_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_50"
                            android:layout_marginRight="@dimen/margin_50"
                            android:layout_marginTop="@dimen/margin_20">

                            <ImageView
                                android:id="@+id/img_kh_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:src="@mipmap/ic_kehuxinxi1" />

                            <ImageView
                                android:id="@+id/img_xq_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:src="@mipmap/ic_xuqiuxinxi2" />

                            <View
                                android:id="@+id/vv_line1"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/margin_5"
                                android:layout_marginRight="@dimen/margin_5"
                                android:layout_toLeftOf="@id/img_xq_info"
                                android:layout_toRightOf="@id/img_kh_info"
                                android:background="@color/line_sj" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_20"
                            android:layout_marginLeft="@dimen/margin_50"
                            android:layout_marginRight="@dimen/margin_50"
                            android:layout_marginTop="@dimen/margin_15">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="客户信息"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12" />

                            <TextView
                                android:id="@+id/tv_xuq"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="需求信息"
                                android:textColor="@color/grenn"
                                android:textSize="@dimen/text_12" />

                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/ac_bg"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/margin_15"
                        android:paddingTop="@dimen/margin_10"
                        android:text="客户联系人信息"
                        android:textColor="@color/grenn2"
                        android:textSize="@dimen/text_12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/zhongdian"
                            android:drawablePadding="@dimen/margin_5"
                            android:text="姓名"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:gravity="end"
                            android:hint="请输入客户姓名"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black_80"
                            android:textColorHint="@color/black_40"
                            android:textSize="@dimen/text_14" />

                        <ImageView
                            android:id="@+id/btn_contacts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginRight="@dimen/margin_15"
                            android:src="@mipmap/sj_tongxunlu" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:background="@color/ac_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/zhongdian"
                            android:drawablePadding="@dimen/margin_5"
                            android:text="手机"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <EditText
                            android:id="@+id/et_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_15"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="请输入客户手机号"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black_80"
                            android:textColorHint="@color/black_40"
                            android:textSize="@dimen/text_14"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:background="@color/ac_bg" />

                    <LinearLayout
                        android:id="@+id/ll_keh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight="1"
                            android:drawableLeft="@mipmap/zhongdian"
                            android:drawablePadding="@dimen/margin_5"
                            android:text="客户关系"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tv_kehu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_15"
                            android:drawablePadding="@dimen/margin_5"
                            android:drawableRight="@mipmap/go"
                            android:hint="请选择"
                            android:textColor="@color/black_80"
                            android:textColorHint="@color/black_40"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:background="@color/ac_bg" />

                    <LinearLayout
                        android:id="@+id/ll_chengh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhongdian"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight="1"
                            android:text="称呼"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tv_ch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_15"
                            android:drawablePadding="@dimen/margin_5"
                            android:drawableRight="@mipmap/go"
                            android:hint="请选择"
                            android:textColor="@color/black_80"
                            android:textColorHint="@color/black_40"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:background="@color/ac_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhongdian"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight="1"
                            android:text="邮箱"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <EditText
                            android:id="@+id/et_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_15"
                            android:background="@null"
                            android:hint="请选择输入客户邮箱"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/black_80"
                            android:textColorHint="@color/black_40"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/ac_bg"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingLeft="@dimen/margin_15"
                        android:paddingTop="@dimen/margin_10"
                        android:text="客户企业信息"
                        android:textColor="@color/grenn2"
                        android:textSize="@dimen/text_12" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhongdian"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight="1"
                            android:text="企业注册"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <RadioGroup
                            android:id="@+id/rg_zc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_15"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/rb_zc"
                                style="@style/shangj_zhuc"
                                android:checked="true"
                                android:text="已注册" />

                            <RadioButton
                                android:id="@+id/rb_zccd"
                                style="@style/shangj_zhuc"
                                android:text="未注册" />
                        </RadioGroup>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:background="@color/ac_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/zhongdian" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_weight="1"
                            android:text="企业名称"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <EditText
                            android:id="@+id/et_gsname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_15"
                            android:background="@null"
                            android:hint="请输入公司名称"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black_80"
                            android:textColorHint="@color/black_40"
                            android:textSize="@dimen/text_14"
                            tools:ignore="RtlCompat" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:background="@color/ac_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhongdian"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_10"
                            android:text="企业关键词"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhongdian"
                            android:visibility="invisible" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_15"
                            android:background="@color/ac_bg"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_10">

                            <EditText
                                android:id="@+id/editText"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_100"
                                android:background="@null"
                                android:gravity="top|left"
                                android:hint="请输入关键字信息"
                                android:maxLength="50"
                                android:textColorHint="@color/grenn"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/et_num"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:maxLength="50"
                                android:text="0/50"
                                android:textColor="@color/grenn2" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_20"
                        android:layout_marginLeft="@dimen/margin_8"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhongdian"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_15"
                            android:text="请填写企业关键字信息，中间用顿号隔开，例如：500强、央企、高科技企业等。"
                            android:textColor="@color/grenn"
                            android:textSize="@dimen/text_14" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_50"
                    android:layout_margin="@dimen/margin_30"
                    android:background="@drawable/yellow_cir_rect"
                    android:gravity="center"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_17" />
            </LinearLayout>
        </ScrollView>
    </com.lcodecore.tkrefreshlayout.TwinklingRefreshLayout>
</LinearLayout>
