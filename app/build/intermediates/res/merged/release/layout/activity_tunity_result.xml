<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_60"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/tjcg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30"
            android:gravity="center_horizontal"
            android:text="恭喜您"
            android:textColor="@color/grenn"
            android:textSize="@dimen/text_18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_7"
            android:gravity="center_horizontal"
            android:text="  认领成功！"
            android:textColor="@color/black"
            android:textSize="@dimen/text_22" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_marginRight="64dp"
            android:layout_marginLeft="64dp"
            android:gravity="center"
            android:text="您已成功认领，建议您及时联系推荐人，获取更多商机信息。"
            android:textColor="@color/grenn"
            android:textSize="@dimen/text_14" />


        <TextView
            android:id="@+id/tv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_30"
            android:paddingRight="@dimen/margin_30"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/groom_tan_rect"
            android:text="查看商机"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@drawable/yellow_cir_rect"
        android:gravity="center"
        android:text="继续认领"
        android:textColor="@color/white"
        android:textSize="@dimen/text_17" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_above="@id/btn_next"
        android:src="@mipmap/chahua" />

</RelativeLayout>
