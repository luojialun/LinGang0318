<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rv_touch_selector"
    android:paddingBottom="7dp"
    android:paddingLeft="15dp"
    android:paddingRight="13dp"
    android:paddingTop="7dp">

    <TextView
        android:id="@+id/tv_title_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/img_news"
        android:ellipsize="end"
        android:lineSpacingExtra="3dp"
        android:text="tv_title_news"
        android:textColor="@color/black_80"
        android:textSize="@dimen/text_18" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/tv_title_news"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_data_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="tv_data_news"
            android:textColor="@color/black_50"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/tv_data_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tv_data_date"
            android:textColor="@color/black_50"
            android:textSize="@dimen/text_13" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_news"
        android:layout_width="@dimen/margin_100"
        android:layout_height="@dimen/margin_70"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:scaleType="fitXY" />

</RelativeLayout>