<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/ll_gou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_50"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/tjcg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25"
            android:layout_gravity="center_horizontal"
            android:text="恭喜您"
            android:textColor="@color/grenn"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/tv_susend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_7"
            android:text="发布成功"
            android:textColor="@color/black"
            android:textSize="@dimen/text_22" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_ts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_gou"
        android:layout_marginTop="@dimen/margin_40"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="该商机已成功推荐至以下园区："
        android:textSize="@dimen/text_16" />



    <Button
        android:id="@+id/btn_succ_park"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_40"
        android:layout_marginLeft="@dimen/margin_15"
        android:layout_marginRight="@dimen/margin_15"
        android:background="@drawable/yellow_cir_rect"
        android:gravity="center"
        android:text="确  定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_17" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_succ_park"
        android:layout_marginBottom="@dimen/margin_30"
        android:src="@mipmap/chahua" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_below="@id/tv_ts"
        android:layout_above="@id/btn_succ_park"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none" />

</RelativeLayout>
