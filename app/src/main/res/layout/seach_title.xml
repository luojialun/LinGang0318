<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/title_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/seach_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/backwhite"
            android:visibility="gone"/>


        <com.lingang.view.ClearEditText
            android:id="@+id/ed_seach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#182246"
            android:hint="请输入您要搜索的内容"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:singleLine="true"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_14"
            android:textColor="@color/white"
            android:imeOptions="actionSearch"
            android:textColorHint="#747A90"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/seach_canle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_10"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:text="取消"
            android:textSize="@dimen/text_14"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/backwhite" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/font_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btn_seach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_5"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_5"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/search" />

    </LinearLayout>

</LinearLayout>