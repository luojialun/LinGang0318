<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_15"
    android:layout_marginRight="@dimen/margin_15"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/groom_rect"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_groom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:textColor="@color/groom_dialog"
            android:textSize="@dimen/text_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/groom_line" />

        <include layout="@layout/recycle_view_single" />

    </LinearLayout>

    <TextView
        android:id="@+id/groom_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@drawable/groom_wight"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_10"
        android:paddingTop="@dimen/margin_10"
        android:text="取消"
        android:textColor="@color/c_0076ff"
        android:textSize="@dimen/text_20" />

</LinearLayout>