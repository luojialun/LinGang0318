<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flow_item_ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/flow_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/flow_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="2017年度集团IT基础应用外包维护合同签约请示"
            android:textColor="@color/black_80"
            android:maxLines="2"
            android:textSize="@dimen/text_16" />
    </LinearLayout>
    <View
        android:id="@+id/flow_line"
        android:layout_below="@+id/flow_title_ll"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
    <RelativeLayout
        android:id="@+id/flow_name_ll"
        android:layout_below="@+id/flow_line"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="创建人"
            android:textColor="@color/black_40"
            android:textSize="@dimen/text_14" />
        <TextView
            android:id="@+id/create_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_13"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_80"
            android:textSize="@dimen/text_14"
            android:text="赵东春"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/flow_state_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_yiyuqi"
        android:layout_marginLeft="53dp"
        android:visibility="gone"
        android:layout_below="@+id/flow_name_ll"/>
    <RelativeLayout
        android:id="@+id/flow_createtime_ll"
        android:layout_below="@+id/flow_name_ll"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="创建时间"
            android:textColor="@color/black_40"
            android:textSize="@dimen/text_14" />
        <TextView
            android:id="@+id/create_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_13"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_80"
            android:textSize="@dimen/text_14"
            android:text="2017/6/2  9:55:44"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/flow_stoptime_ll"
        android:layout_below="@+id/flow_createtime_ll"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15"
            android:text="驻留时间"
            android:textColor="@color/black_40"
            android:textSize="@dimen/text_14" />
        <TextView
            android:id="@+id/stop_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_13"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_80"
            android:textSize="@dimen/text_14"
            android:text=""/>
    </RelativeLayout>
</RelativeLayout>