<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    tools:showIn="@layout/activity_group">

    <ImageView
        android:id="@+id/img_group"
        android:layout_width="match_parent"
        android:layout_height="180dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:background="@color/tv_flow_color" />

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/more_details" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/margin_30"
        android:background="@mipmap/tuji_bg"
        android:drawableLeft="@mipmap/ic_tupian"
        android:drawablePadding="@dimen/margin_3"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_5"
        android:textColor="@color/white"
        android:textSize="@dimen/text_12"
        android:visibility="gone" />


</FrameLayout>