<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_backgroud_gray"
    android:orientation="vertical">

    <!--标题栏区域-->
    <LinearLayout
        android:id="@+id/search_all_toolbar_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/broad"
        android:gravity="bottom">
        <ImageView
            android:id="@+id/home_search_left_back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginBottom="6dp"
            android:src="@mipmap/backwhite" />

        <com.lingang.view.ClearableEditText
            android:id="@+id/home_search_input_et"
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_search_bg"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="4dp"
            android:layout_marginBottom="7dp"
            android:hint="请输入搜索内容"
            android:drawableRight="@mipmap/search_clear"
            android:imeOptions="actionSearch"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white_20"
            android:textSize="14sp" />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/home_search_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>