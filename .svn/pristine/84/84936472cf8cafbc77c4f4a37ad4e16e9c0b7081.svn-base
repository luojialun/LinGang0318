<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--<com.lingang.weight.TitleBar-->
        <!--android:id="@+id/setting_gesture_edit_title_bar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="50dp"-->
        <!--android:background="@color/titlebar_bg"-->
        <!--app:titlebar_leftDrawable="@mipmap/backwhite"-->
        <!--app:titlebar_titleText="手势密码编辑"-->
        <!--app:titlebar_titleTextColor="@color/word_white_color_FFFFFF"-->
        <!--app:titlebar_titleTextSize="@dimen/titlebar_title_size" />-->

    <com.lingang.view.CircleImageView
        android:id="@+id/gesture_lock_edit_user_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"
        android:src="@mipmap/pic" />


    <TextView
        android:id="@+id/gesture_lock_edit_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="请绘制解锁图案"
        android:textColor="@color/black_70"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <com.lingang.view.gesturelock.LockPatternView
            android:id="@+id/gesture_lock_edit_lockpatternview"
            android:layout_width="270dp"
            android:layout_height="270dp"
            app:defaultColor="@color/a6a6a6"
            app:selectColor="@color/word_orange_color_F57725" />
    </FrameLayout>

    <TextView
        android:id="@+id/login_gesture_edit_skip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:drawableRight="@mipmap/go"
        android:text="跳过"
        android:textColor="@color/black_70"
        android:textSize="16sp" />
</LinearLayout>