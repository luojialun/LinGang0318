<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/rv_touch_selector"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_15"
    android:paddingRight="@dimen/margin_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_conname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="商机推荐人"
                android:textColor="@color/grenn"
                android:textSize="@dimen/text_14" />


            <TextView
                android:id="@+id/tv_perclass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/c_7eb2ec"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tv_pername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:text="需求类型"
            android:textColor="@color/grenn"
            android:textSize="@dimen/text_14" />


        <LinearLayout
            android:id="@+id/ll_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="厂房："
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="研发办公："
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_land"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="土地："
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_zhuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="注册型企业："
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_zhuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/tunity_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginRight="@dimen/margin_30"
        android:visibility="gone" />
</FrameLayout>